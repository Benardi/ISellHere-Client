<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_point_of_sale"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.grupoes.projetoes.activities.EditPointOfSaleActivity">
    <Button
        android:layout_height="30sp"
        android:layout_width="30sp"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"
        android:background="@drawable/ic_close_dark"
        android:id="@+id/close_edit_pointofsale"
        android:backgroundTint="#C6C6C6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Point of Sale"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:id="@+id/head_edit_pointofsale"
        android:layout_alignBottom="@+id/close_edit_pointofsale"
        android:layout_centerHorizontal="true" />

    <View style="@style/Divider"/>

    <ImageView
        android:layout_width="250sp"
        android:layout_height="170sp"
        android:id="@+id/edit_pos_image_view"
        android:background="@android:drawable/ic_menu_camera"
        android:layout_below="@+id/head_edit_pointofsale"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:scaleType="centerCrop"/>

    <EditText
        android:layout_width="250sp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editNamePSText"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pos_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/editPSImageButton"
        android:layout_width="wrap_content"
        android:id="@+id/editPSImageButton"
        android:textColor="@color/colorAccent"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_pos_image_view"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="60sp"
        android:padding="5dp"
        android:layout_height="60sp"
        android:id="@+id/saveButtonEditPS"
        android:background="@mipmap/ic_done_round"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/pos_name"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/editNamePSText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/pos_description"
        android:textSize="15sp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/editNamePSText"
        android:layout_alignStart="@+id/editNamePSText" />

    <EditText
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editDescripptionPSText"
        android:textSize="15sp"
        android:layout_below="@+id/pos_description"
        android:layout_alignStart="@+id/pos_description" />
</RelativeLayout>

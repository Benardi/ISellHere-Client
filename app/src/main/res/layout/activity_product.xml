<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.grupoes.projetoes.activities.ProductActivity">

    <include
        layout="@layout/toolbar_init" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <Space
                android:layout_width="match_parent"
                android:layout_height="55sp" />

            <ImageView
                android:id="@+id/product_imageview"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="250sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_gravity="end">
            <Button
                android:id="@+id/product_edit_button"
                android:layout_height="30sp"
                android:background="@mipmap/ic_edit"
                android:layout_alignParentTop="true"
                android:layout_width="30sp"
                android:layout_margin = "10sp"
                android:layout_marginEnd="10sp"/>

            <Button
                android:layout_height="30sp"
                android:id="@+id/post_delete_button"
                android:layout_width="30sp"
                android:layout_margin="10sp"
                android:background="@mipmap/ic_delete"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:padding="6dip"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignWithParentIfMissing="true"
                    android:gravity="center_vertical"
                    android:text="Name"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="26dip"
                    android:ellipsize="marquee"
                    android:text="NAME"
                    android:textSize="14sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/product_name_textview" />

            </RelativeLayout>

            <View style="@style/Divider"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:padding="6dip"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignWithParentIfMissing="true"
                    android:gravity="center_vertical"
                    android:text="Description"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="26dip"
                    android:ellipsize="marquee"
                    android:text="DESCRIPTION"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/product_description_textview" />

            </RelativeLayout>

            <View style="@style/Divider"/>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:padding="6dip"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignWithParentIfMissing="true"
                    android:gravity="center_vertical"
                    android:text="Price"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="26dip"
                    android:ellipsize="marquee"
                    android:text="PRICE"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/product_price_textview" />


            </RelativeLayout>
            <View style="@style/Divider"/>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>

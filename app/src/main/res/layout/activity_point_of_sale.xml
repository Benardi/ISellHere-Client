<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_point_of_sale"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.grupoes.projetoes.activities.PointOfSaleActivity">

    <include
        layout="@layout/toolbar_init" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="55sp" />

            <ImageView
                android:id="@+id/pos_imageview"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="250sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <Button
                    android:id="@+id/pos_edit_button"
                    android:layout_width="30sp"
                    android:layout_margin="10sp"
                    android:layout_height="30sp"
                    android:background="@mipmap/ic_edit"/>

                <Button
                    android:background="@mipmap/ic_delete"
                    android:layout_height="30sp"
                    android:id="@+id/post_delete_button"
                    android:layout_width="30sp"
                    style="@style/formButton"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10sp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:padding="6dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignWithParentIfMissing="true"
                    android:gravity="center_vertical"
                    android:text="Name"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="26dip"
                    android:ellipsize="marquee"
                    android:text="NAME"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/pos_name_textview" />

            </RelativeLayout>

            <View style="@style/Divider"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:padding="6dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignWithParentIfMissing="true"
                    android:gravity="center_vertical"
                    android:text="Description"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="26dip"
                    android:ellipsize="marquee"
                    android:text="DESCRIPTION"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/pos_description_textview" />

            </RelativeLayout>

            <View style="@style/Divider"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:gravity="center_vertical"
                android:text="Products"
                android:textSize="16sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="90sp"
                    android:layout_marginTop="3.5sp"
                    android:layout_height="120sp">
                    <Button
                        android:layout_height="90sp"
                        android:layout_width="match_parent"
                        android:background="@mipmap/ic_add"
                        android:id="@+id/pos_add_product_button"/>
                    <TextView
                        android:layout_width="90sp"
                        android:layout_height="30sp"
                        android:text="Add Product"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginStart="5sp"/>

                </FrameLayout>

                <android.support.v7.widget.RecyclerView
                android:id="@+id/products_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:clipToPadding="false"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
